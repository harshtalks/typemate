{
  "name": "typemate",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "check-types": "turbo run check-types",
    "add:web": "pnpm --filter '@typemate/web' add",
    "add:root": "pnpm --workspace-root add",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "knip": "knip",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "husky": "^9.1.7",
    "knip": "^5.83.1",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.31.0",
    "oxlint": "^1.46.0",
    "turbo": "^2.8.5",
    "typescript": "5.9.2"
  },
  "lint-staged": {
    "*": "pnpm run format --no-error-on-unmatched-pattern",
    "*.{js,jsx,ts,tsx,mjs,cjs}": "pnpm run lint"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.0.0"
}
