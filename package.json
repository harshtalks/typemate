{
  "name": "typemate",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "check-types": "turbo run check-types",
    "add:web": "pnpm --filter '@typemate/web' add",
    "add:root": "pnpm --workspace-root add",
    "add:db": "pnpm --filter '@typemate/db' add",
    "add:types": "pnpm --filter '@typemate/types' add",
    "add:auth": "pnpm --filter '@typemate/auth' add",
    "lint:check": "ultracite check",
    "lint:fix": "ultracite fix",
    "knip": "knip",
    "prepare": "husky",
    "check": "ultracite check",
    "fix": "ultracite fix",
    "db:migrate": "pnpm --filter '@typemate/db' db:migrate",
    "db:generate": "pnpm --filter '@typemate/db' db:generate",
    "db:push": "pnpm --filter '@typemate/db' db:push"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@dotenvx/dotenvx": "catalog:",
    "@types/node": "catalog:",
    "husky": "^9.1.7",
    "knip": "^5.83.1",
    "lint-staged": "catalog:",
    "turbo": "^2.8.5",
    "typescript": "catalog:",
    "ultracite": "7.1.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": "pnpm run lint",
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "pnpm dlx ultracite fix",
      "pnpm dlx ultracite fix"
    ]
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.0.0"
}
