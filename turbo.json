{
  "$schema": "https://turborepo.dev/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "//#quality:fix": {
      "dependsOn": ["//#lint:fix"]
    },
    "//#quality:check": {
      "dependsOn": ["//#lint:check"]
    },
    "//#lint:fix": {},
    "//#lint:check": {
      "cache": false
    }
  }
}
